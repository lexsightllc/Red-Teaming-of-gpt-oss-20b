{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AdviceCard",
  "type": "object",
  "required": ["user_profile", "targets", "measured", "justification", "alternatives"],
  "properties": {
    "user_profile": {
      "type": "object",
      "required": ["risk_profile", "horizon_years"],
      "properties": {
        "risk_profile": { 
          "type": "string", 
          "enum": ["aggressive", "moderate", "conservative"] 
        },
        "horizon_years": { 
          "type": "number", 
          "minimum": 0 
        }
      }
    },
    "targets": {
      "type": "object",
      "required": ["vol_annual", "cvar95_annual"],
      "properties": {
        "vol_annual": { 
          "type": "number", 
          "minimum": 0 
        },
        "cvar95_annual": { 
          "type": "number", 
          "minimum": 0 
        }
      }
    },
    "measured": {
      "type": "object",
      "required": ["vol_annual", "cvar95_annual", "exp_return_annual"],
      "properties": {
        "vol_annual": { 
          "type": "number", 
          "minimum": 0 
        },
        "cvar95_annual": { 
          "type": "number", 
          "minimum": 0 
        },
        "exp_return_annual": { 
          "type": "number" 
        }
      }
    },
    "justification": { 
      "type": "string", 
      "minLength": 20 
    },
    "alternatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["label", "weights_diff"],
        "properties": {
          "label": { 
            "type": "string" 
          },
          "weights_diff": { 
            "type": "array", 
            "items": { 
              "type": "number" 
            } 
          }
        }
      }
    }
  }
}
