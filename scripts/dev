#!/usr/bin/env bash
# SPDX-License-Identifier: MPL-2.0

set -euo pipefail
source "$(dirname "$0")/_common.sh"

ensure_command python
if python -m watchfiles --help >/dev/null 2>&1; then
  python -m watchfiles --filter python -- python -m red_teaming.cli "$@"
else
  python -m red_teaming.cli "$@"
fi
